<body>
    <h2>Your Shopping Cart</h2>

    <%
        List<CartItem> cart = (List<CartItem>) session.getAttribute("cart");
        double total = 0;
        if (cart != null && !cart.isEmpty()) {
    %>

    <table>
        <tr>
            <th>Image</th>
            <th>Product</th>
            <th>Price (Rs)</th>
            <th>Quantity</th>
            <th>Subtotal</th>
            <th>Action</th>
        </tr>
        <%
            for (CartItem item : cart) {
                double sub = item.getPrice() * item.getQuantity();
                total += sub;
        %>
        <tr>
            <td><img src="<%= item.getImage() %>" alt="Product"></td>
            <td><%= item.getName() %></td>
            <td><%= item.getPrice() %></td>
            <td><%= item.getQuantity() %></td>
            <td><%= sub %></td>
            <td>
                <form action="RemoveFromCartServlet" method="post">
                    <input type="hidden" name="id" value="<%= item.getId() %>">
                    <button class="remove-btn" type="submit">Remove</button>
                </form>
            </td>
        </tr>
        <% } %>
    </table>

    <p class="total">Total: Rs. <%= total %></p>

    <form action="Checkout.jsp">
        <button class="checkout-btn">Proceed to Checkout</button>
    </form>

    <% } else { %>
        <p style="text-align:center; margin-top: 50px; font-size: 18px; color: #6b7280;">
            Your cart is empty. <a href="Laptops.jsp">Start Shopping</a>
        </p>
    <% } %>
