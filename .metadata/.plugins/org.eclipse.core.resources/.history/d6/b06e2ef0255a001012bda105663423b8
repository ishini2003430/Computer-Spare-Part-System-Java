            box-shadow: 0 4px 8px rgba(0,0,0,0.05);
        }

        th, td {
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid #e5e7eb;
        }

        th {
            background-color: #2563eb;
            color: white;
        }

        img {
            width: 80px;
            height: auto;
        }

        .remove-btn {
            background: #ef4444;
            color: white;
            border: none;
