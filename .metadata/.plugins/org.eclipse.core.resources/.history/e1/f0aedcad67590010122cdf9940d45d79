        }
        h2 {
            text-align: center;
            margin-bottom: 30px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            border-radius: 8px;
        }
        th, td {
            padding: 15px;
            text-align: center;
            border-bottom: 1px solid #ddd;
            vertical-align: middle;
        }
        th {
            background-color: #111827;
            color: white;
        }
        tr:hover {
            background-color: #f1f5f9;
        }
        img.cart-image {
            width: 80px;
            height: 60px;
            object-fit: contain;
            border-radius: 6px;
        }
        input[type="number"] {
            width: 60px;
            padding: 6px;
