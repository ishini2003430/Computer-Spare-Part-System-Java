package ComputerPackage;

import java.io.IOException;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.*;

@WebServlet("/RUpdateServlet")
public class RUpdateServlet extends HttpServlet {

    // This will load the user details and forward to update form
    protected void doGet(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {

        String idParam = request.getParameter("id");
        RegisterModel registerDetails = null;

        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            Connection conn = DriverManager.getConnection(
                "jdbc:mysql://localhost:3306/computer", "root", "ishini2003");

            String query = "SELECT * FROM register WHERE idregister = ?";
            PreparedStatement stmt = conn.prepareStatement(query);
            stmt.setInt(1, Integer.parseInt(idParam));
            ResultSet rs = stmt.executeQuery();

            if (rs.next()) {
                registerDetails = new RegisterModel(
                    rs.getInt("idregister"),
                    rs.getString("fullname"),
                    rs.getString("email"),
                    rs.getString("username"),
                    rs.getString("password")
                );
            }

            rs.close();
            stmt.close();
            conn.close();
        } catch (Exception e) {
            e.printStackTrace();
        }

        if (registerDetails != null) {
            request.setAttribute("registerDetails", registerDetails);
            RequestDispatcher dispatcher = request.getRequestDispatcher("updateRegister.jsp");
            dispatcher.forward(request, response);
        } else {
            response.getWriter().println("No user found with ID: " + idParam);
        }
    }

    // This will update the user data
    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {

        int id = Integer.parseInt(request.getParameter("id"));
        String fullname = request.getParameter("fullname");
        String email = request.getParameter("email");
        String username = request.getParameter("username");
        String password = request.getParameter("password");

        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/computer", "root", "ishini2003");

            String updateQuery = "UPDATE register SET fullname=?, email=?, username=?, password=? WHERE idregister=?";
            PreparedStatement pstmt = conn.prepareStatement(updateQuery);

            pstmt.setString(1, fullname);
            pstmt.setString(2, email);
            pstmt.setString(3, username);
            pstmt.setString(4, password);
            pstmt.setInt(5, id);

            pstmt.executeUpdate();

            pstmt.close();
            conn.close();
        } catch (Exception e) {
            e.printStackTrace();
        }

        response.sendRedirect("registeraccount.jsp");
    }
}
