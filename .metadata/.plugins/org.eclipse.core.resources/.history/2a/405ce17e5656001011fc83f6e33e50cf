  <!-- JS to toggle forms -->
  <script>
    const userBtn = document.getElementById('userBtn');
    const managerBtn = document.getElementById('managerBtn');
    const userForm = document.getElementById('userForm');
    const managerForm = document.getElementById('managerForm');
    const formTitle = document.getElementById('form-title');

    userBtn.addEventListener('click', () => {
      userForm.style.display = 'block';
      managerForm.style.display = 'none';
      userBtn.classList.add('bg-white', 'text-blue-600', 'font-semibold');
      managerBtn.classList.remove('bg-white', 'text-blue-600', 'font-semibold');
      managerBtn.classList.add('text-gray-500');
      formTitle.innerText = 'Login to continue';
    });

    managerBtn.addEventListener('click', () => {
      userForm.style.display = 'none';
      managerForm.style.display = 'block';
      managerBtn.classList.add('bg-white', 'text-blue-600', 'font-semibold');
      userBtn.classList.remove('bg-white', 'text-blue-600', 'font-semibold');
      userBtn.classList.add('text-gray-500');
      formTitle.innerText = 'Manager Login';
    });
  </script>
