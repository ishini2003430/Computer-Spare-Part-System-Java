<%
    int totalSuppliers = 0;
    int totalParts = 0;
    int totalOrders = 0;
    double totalSales = 0.0;
    java.util.LinkedHashMap<String, Integer> partsByCategory = new java.util.LinkedHashMap<>();

    // For chart data
    java.util.List<String> months = new java.util.ArrayList<>();
    java.util.List<Double> monthlySales = new java.util.ArrayList<>();
    java.util.List<Integer> monthlyOrders = new java.util.ArrayList<>();

    // Map to hold year-month key and sums/counts
    java.util.Map<String, Double> salesMap = new LinkedHashMap<>();
    java.util.Map<String, Integer> ordersMap = new LinkedHashMap<>();

    try {
        Class.forName("com.mysql.jdbc.Driver");
        Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/computer", "root", "ishini2003");

        Statement stmt = conn.createStatement();
        ResultSet rs = stmt.executeQuery("SELECT COUNT(*) FROM suppliers");
        if (rs.next()) totalSuppliers = rs.getInt(1);

        rs = stmt.executeQuery("SELECT COUNT(*) FROM parts");
        if (rs.next()) totalParts = rs.getInt(1);

        rs = stmt.executeQuery("SELECT COUNT(*) FROM orders");
        if (rs.next()) totalOrders = rs.getInt(1);

        rs = stmt.executeQuery("SELECT IFNULL(SUM(total_amount),0) FROM orders");
        if (rs.next()) totalSales = rs.getDouble(1);

        rs = stmt.executeQuery("SELECT category, COUNT(*) FROM parts GROUP BY category");
        while (rs.next()) {
            partsByCategory.put(rs.getString(1), rs.getInt(2));
        }

        // Get sales and orders for last 6 months grouped by year and month number
        String salesQuery = 
          "SELECT YEAR(order_date) as yr, MONTH(order_date) as mon, " +
          "SUM(total_amount) as totalSales, COUNT(*) as totalOrders " +
          "FROM orders " +
          "WHERE order_date >= DATE_SUB(CURDATE(), INTERVAL 6 MONTH) " +
          "GROUP BY yr, mon " +
          "ORDER BY yr, mon";

        rs = stmt.executeQuery(salesQuery);

        while(rs.next()) {
            int year = rs.getInt("yr");
            int month = rs.getInt("mon");
            double salesVal = rs.getDouble("totalSales");
            int ordersVal = rs.getInt("totalOrders");

            // Create a key for the month e.g. "2025-07"
            String key = String.format("%04d-%02d", year, month);

            salesMap.put(key, salesVal);
            ordersMap.put(key, ordersVal);
        }
        rs.close();
        stmt.close();
        conn.close();

        // Format months nicely for display, e.g. "Jul 2025"
        SimpleDateFormat monthFormat = new SimpleDateFormat("MMM yyyy", Locale.ENGLISH);
        Calendar cal = Calendar.getInstance();

        for (String key : salesMap.keySet()) {
            String[] parts = key.split("-");
            int yr = Integer.parseInt(parts[0]);
            int mon = Integer.parseInt(parts[1]);
            cal.set(yr, mon-1, 1);  // month is 0-based in Calendar
            String formattedMonth = monthFormat.format(cal.getTime());
            months.add(formattedMonth);
            monthlySales.add(salesMap.get(key));
            monthlyOrders.add(ordersMap.get(key));
        }
    } catch(Exception e) {
        out.println("<p style='color:red;'>Error: " + e.getMessage() + "</p>");
    }

    Gson gson = new Gson();
%>

    <div class="metric-container">
        <div class="metric-box"><h2><%= totalSuppliers %></h2><p>Suppliers</p></div>
        <div class="metric-box"><h2><%= totalParts %></h2><p>Parts</p></div>
        <div class="metric-box"><h2><%= totalOrders %></h2><p>Orders</p></div>
        <div class="metric-box"><h2>$<%= String.format("%.2f", totalSales) %></h2><p>Total Sales</p></div>
    </div>

    <h2>Sales and Orders - Last 6 Months</h2>
    <canvas id="salesChart" height="150"></canvas>

    <h2>Parts by Category</h2>
    <canvas id="categoryChart" height="150"></canvas>

    <script>
        const months = <%= gson.toJson(months) %>;
        const sales = <%= gson.toJson(monthlySales) %>;
        const orders = <%= gson.toJson(monthlyOrders) %>;

        new Chart(document.getElementById('salesChart'), {
            type: 'bar',
            data: {
                labels: months,
                datasets: [
                    {
                        label: 'Sales ($)',
                        data: sales,
                        backgroundColor: '#2563eb'
                    },
                    {
                        label: 'Orders',
                        data: orders,
                        backgroundColor: '#ef4444'
                    }
                ]
            },
            options: {
                responsive: true,
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        const categoryLabels = <%= gson.toJson(new java.util.ArrayList<>(partsByCategory.keySet())) %>;
        const categoryValues = <%= gson.toJson(new java.util.ArrayList<>(partsByCategory.values())) %>;

        new Chart(document.getElementById('categoryChart'), {
            type: 'pie',
            data: {
                labels: categoryLabels,
                datasets: [{
                    data: categoryValues,
                    backgroundColor: ['#2563eb','#22c55e','#ef4444','#fbbf24','#a855f7','#14b8a6']
                }]
            }
        });
    </script>
</div>
