<%@ page import="java.sql.*" %>
<%@ page import="java.math.BigDecimal" %>
<%@ page contentType="text/html;charset=UTF-8" language="java" %>

<%
    String idParam = request.getParameter("id");
    if (idParam == null || idParam.trim().isEmpty()) {
        response.sendRedirect("ViewCctvAccessories.jsp"); // redirect if no id
        return;
    }
    
    int id = 0;
    try {
        id = Integer.parseInt(idParam);
    } catch (NumberFormatException e) {
        response.sendRedirect("ViewCctvAccessories.jsp"); // redirect if invalid id
        return;
    }

    // Initialize variables for product info
    String name = "";
    String item_code = "";
    String category = "CCTV Accessory";
    BigDecimal price = BigDecimal.ZERO;
    BigDecimal cash_price = BigDecimal.ZERO;
    String stock_status = "";
    String image_url = "";
    String description = "";
    String brand = "";

    Connection conn = null;
    PreparedStatement pst = null;
    ResultSet rs = null;

    try {
        Class.forName("com.mysql.jdbc.Driver"); // or com.mysql.cj.jdbc.Driver
        conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/computer", "root", "ishini2003");
        String sql = "SELECT * FROM cctvaccess WHERE id = ?";
        pst = conn.prepareStatement(sql);
        pst.setInt(1, id);
        rs = pst.executeQuery();

        if (rs.next()) {
            name = rs.getString("name");
            item_code = rs.getString("item_code");
            category = rs.getString("category");
            price = rs.getBigDecimal("price");
            cash_price = rs.getBigDecimal("cash_price");
            stock_status = rs.getString("stock_status");
            image_url = rs.getString("image_url");
            description = rs.getString("description");
            brand = rs.getString("brand");
        } else {
            response.sendRedirect("ViewCctvAccessories.jsp"); // no record found, redirect
            return;
        }

    } catch (Exception e) {
        e.printStackTrace();
    } finally {
        if (rs != null) try { rs.close(); } catch (Exception e) {}
        if (pst != null) try { pst.close(); } catch (Exception e) {}
        if (conn != null) try { conn.close(); } catch (Exception e) {}
    }
%>

