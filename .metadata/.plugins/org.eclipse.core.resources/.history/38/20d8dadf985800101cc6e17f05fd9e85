    try {
        Class.forName("com.mysql.jdbc.Driver");
        Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/computer", "root", "ishini2003");
        Statement st = conn.createStatement();
        ResultSet rs = st.executeQuery("SELECT * FROM products WHERE category IS NOT NULL");

        while (rs.next()) {
%>
    <div class="card">
        <img src="<%= rs.getString("image_url") %>" alt="Product Image">
        <div class="card-body">
            <h4><%= rs.getString("name") %></h4>
            <p><strong>Category:</strong> <%= rs.getString("category") %></p>
            <p><strong>Item Code:</strong> <%= rs.getString("item_code") %></p>
            <p class="price">Rs. <%= String.format("%.2f", rs.getDouble("price")) %></p>
            <p class="cash-price">Cash Price: Rs. <%= String.format("%.2f", rs.getDouble("cash_price")) %></p>
            <p><strong>Status:</strong> <%= rs.getString("stock_status") %></p>
        </div>
        <a href="OrderForm.jsp?id=<%= rs.getInt("id") %>" class="btn-buy">Buy Now / මිලදී ගන්න</a>
    </div>
<%
        }
        conn.close();
