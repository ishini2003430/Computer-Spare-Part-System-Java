        <!-- Sales Details Section -->
        <div class="sales-section">
            <h2>Recent Sales Details</h2>

            <%
                Connection conn = null;
                PreparedStatement psOrders = null;
                PreparedStatement psItems = null;
                ResultSet rsOrders = null;
                ResultSet rsItems = null;

                try {
                    Class.forName("com.mysql.jdbc.Driver");
                    conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/computer", "root", "ishini2003");

                    String sqlOrders = "SELECT * FROM orders ORDER BY id DESC LIMIT 5"; // show last 5 orders
                    psOrders = conn.prepareStatement(sqlOrders);
                    rsOrders = psOrders.executeQuery();

                    while (rsOrders.next()) {
                        int orderId = rsOrders.getInt("id");
                        String name = rsOrders.getString("name");
                        String email = rsOrders.getString("email");
                        String phone = rsOrders.getString("phone");
                        String address = rsOrders.getString("address");
                        double totalAmount = rsOrders.getDouble("total_amount");
            %>
            <div class="sales-block">
                <div class="sales-header">
                    <h3>Order ID: <%= orderId %></h3>
                    <p><strong>Customer:</strong> <%= name %> | <strong>Email:</strong> <%= email %> | <strong>Phone:</strong> <%= phone %></p>
                    <p><strong>Shipping Address:</strong> <%= address %></p>
                    <p><strong>Total Sale:</strong> $<%= String.format("%.2f", totalAmount) %></p>
                </div>

                <table>
                    <thead>
                    <tr>
                        <th>Product ID</th>
                        <th>Product Name</th>
                        <th>Unit Price</th>
                        <th>Qty</th>
                        <th>Total</th>
                    </tr>
                    </thead>
                    <tbody>
                    <%
                        String sqlItems = "SELECT * FROM order_items WHERE order_id = ?";
                        psItems = conn.prepareStatement(sqlItems);
                        psItems.setInt(1, orderId);
                        rsItems = psItems.executeQuery();

                        while (rsItems.next()) {
                            int pid = rsItems.getInt("product_id");
                            String pname = rsItems.getString("product_name");
                            double price = rsItems.getDouble("price");
                            int qty = rsItems.getInt("quantity");
                            double total = price * qty;
                    %>
                    <tr>
                        <td><%= pid %></td>
                        <td><%= pname %></td>
                        <td>$<%= String.format("%.2f", price) %></td>
                        <td><%= qty %></td>
                        <td>$<%= String.format("%.2f", total) %></td>
                    </tr>
                    <%
                        }
                        rsItems.close();
                        psItems.close();
                    %>
                    </tbody>
                </table>
            </div>
            <%
                    }
                } catch (Exception e) {
                    out.println("<p style='color:red;'>Error loading sales: " + e.getMessage() + "</p>");
                } finally {
                    try {
                        if (rsOrders != null) rsOrders.close();
                        if (psOrders != null) psOrders.close();
                        if (conn != null) conn.close();
                    } catch (SQLException e) {
                        e.printStackTrace();
                    }
                }
            %>
        </div>

    </div>

    <script>
        // Chart.js sales line chart data
        const salesData = {
            labels: ["Feb", "Mar", "Apr", "May", "Jun", "Jul"],
            datasets: [{
                label: "Sales ($)",
                backgroundColor: "rgba(37, 99, 235, 0.5)",
                borderColor: "#2563eb",
                data: [15000, 18000, 14000, 20000, 22000, 25000],
                fill: true,
                tension: 0.4,
                pointRadius: 5,
                pointHoverRadius: 7
            }]
        };
        const salesConfig = {
            type: 'line',
            data: salesData,
            options: {
                responsive: true,
                plugins: { legend: { display: true }, tooltip: { enabled: true } },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: { callback: value => '$' + value.toLocaleString() }
                    }
                }
            }
        };

        // Chart.js product categories pie chart data
        const categoriesData = {
            labels: ["Laptops", "Accessories", "Desktops", "CCTV", "Printers"],
            datasets: [{
                label: "Category Distribution",
                data: [40, 25, 15, 10, 10],
                backgroundColor: ["#2563eb", "#3b82f6", "#60a5fa", "#93c5fd", "#bfdbfe"],
                hoverOffset: 20
            }]
        };
        const categoriesConfig = {
            type: 'pie',
            data: categoriesData,
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'bottom', labels: { padding: 20, boxWidth: 15 } },
                    tooltip: { enabled: true }
                }
            }
        };

        window.onload = function () {
            new Chart(document.getElementById('salesLineChart').getContext('2d'), salesConfig);
            new Chart(document.getElementById('productPieChart').getContext('2d'), categoriesConfig);
        };
    </script>
