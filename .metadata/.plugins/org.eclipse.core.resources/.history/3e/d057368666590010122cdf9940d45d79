<%@ page import="java.util.*, java.text.DecimalFormat" %>
<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<!DOCTYPE html>
<html>
<head>
    <title>Shopping Cart - TechParts</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9fafb;
            padding: 30px;
        }
        h2 {
            text-align: center;
            margin-bottom: 30px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            background: #fff;
            box-shadow: 0 0 8px rgba(0,0,0,0.1);
        }
        th, td {
            padding: 14px;
            border: 1px solid #ddd;
            text-align: center;
        }
        th {
            background: #111827;
            color: white;
        }
        .remove-btn {
            background-color: #ef4444;
            color: white;
            padding: 6px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .remove-btn:hover {
            background-color: #dc2626;
        }
        .total {
            font-weight: bold;
        }
    </style>
</head>
<body>

<h2>Your Shopping Cart</h2>

<%
    HttpSession session = request.getSession(false);
    List<HashMap<String, Object>> cart = null;
    double total = 0.0;
    DecimalFormat df = new DecimalFormat("#,##0.00");

    if (session != null) {
        cart = (List<HashMap<String, Object>>) session.getAttribute("cart");
    }

    if (cart == null || cart.isEmpty()) {
%>
    <p style="text-align:center;">Your cart is empty.</p>
<%
    } else {
%>
    <table>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Price (LKR)</th>
            <th>Quantity</th>
            <th>Subtotal (LKR)</th>
            <th>Actions</th>
        </tr>
        <%
            for (HashMap<String, Object> item : cart) {
                int id = (int) item.get("id");
                String name = (String) item.get("name");
                String image = (String) item.get("image");
                double price = Double.parseDouble(item.get("price").toString());
                int quantity = (int) item.get("quantity");
                double subtotal = price * quantity;
                total += subtotal;
        %>
        <tr>
            <td><img src="<%= image %>" alt="Product Image" width="80"></td>
            <td><%= name %></td>
            <td><%= df.format(price) %></td>
            <td><%= quantity %></td>
            <td><%= df.format(subtotal) %></td>
            <td>
                <form action="RemoveFromCartServlet" method="post">
                    <input type="hidden" name="id" value="<%= id %>">
                    <input type="submit" class="remove-btn" value="Remove" onclick="return confirm('Remove this item?');">
                </form>
            </td>
        </tr>
        <%
            }
        %>
        <tr>
            <td colspan="4" class="total">Total:</td>
            <td colspan="2" class="total">LKR <%= df.format(total) %></td>
        </tr>
    </table>
<%
    }
%>

</body>
</html>
