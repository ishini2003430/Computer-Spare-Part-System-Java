    <%
        List<CartItem> cart = (List<CartItem>) session.getAttribute("cart");
        if (cart == null || cart.isEmpty()) {
    %>
        <p>Your cart is empty.</p>
    <%
        } else {
    %>
        <table>
            <tr>
                <th>Image</th>
                <th>Product Name</th>
                <th>Price (Rs.)</th>
            </tr>
            <%
                double total = 0;
                for (CartItem item : cart) {
                    total += item.getPrice();
            %>
                <tr>
                    <td><img src="<%= item.getImage() %>" alt="Product Image"></td>
                    <td><%= item.getName() %></td>
                    <td>Rs. <%= String.format("%.2f", item.getPrice()) %></td>
                </tr>
            <%
                }
            %>
            <tr>
                <th colspan="2">Total</th>
                <th>Rs. <%= String.format("%.2f", total) %></th>
            </tr>
        </table>
    <%
        }
