    <div class="main">
        <div class="header">Manager Dashboard</div>

        <!-- Info Cards -->
        <div class="cards">
            <div class="card">
                <h3>Total Users</h3>
                <p><%= totalUsers %></p>
            </div>
            <div class="card">
                <h3>Total Orders</h3>
                <p><%= totalOrders %></p>
            </div>
            <div class="card">
                <h3>Total Revenue</h3>
                <p>$<%= String.format("%.2f", totalRevenue) %></p>
            </div>
            <div class="card">
                <h3>Total Products</h3>
                <p><%= totalProducts %></p>
            </div>
        </div>

        <!-- Charts -->
        <div class="charts">
            <!-- Sales Over Time Line Chart -->
            <div class="chart-card">
                <h3>Sales Over Last 6 Months</h3>
                <canvas id="salesLineChart" width="300" height="200"></canvas>
            </div>

            <!-- Product Categories Pie Chart -->
            <div class="chart-card">
                <h3>Product Categories</h3>
                <canvas id="productPieChart" width="300" height="200"></canvas>
            </div>
        </div>
    </div>

    <script>
        // Sales over last 6 months example data
        const salesData = {
            labels: ["Feb", "Mar", "Apr", "May", "Jun", "Jul"],
            datasets: [{
                label: "Sales ($)",
                backgroundColor: "rgba(37, 99, 235, 0.5)",
                borderColor: "#2563eb",
                data: [15000, 18000, 14000, 20000, 22000, 25000],
                fill: true,
                tension: 0.4,
                pointRadius: 5,
                pointHoverRadius: 7
            }]
        };

        const salesConfig = {
            type: 'line',
            data: salesData,
            options: {
                responsive: true,
                plugins: {
                    legend: { display: true },
                    tooltip: { enabled: true }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return '$' + value.toLocaleString();
                            }
                        }
                    }
                }
            }
        };

        // Product Categories example data
        const categoriesData = {
            labels: ["Laptops", "Accessories", "Desktops", "CCTV", "Printers"],
            datasets: [{
                label: "Category Distribution",
                data: [40, 25, 15, 10, 10],
                backgroundColor: [
                    "#2563eb",
                    "#3b82f6",
                    "#60a5fa",
                    "#93c5fd",
                    "#bfdbfe"
                ],
                hoverOffset: 20
            }]
        };

        const categoriesConfig = {
            type: 'pie',
            data: categoriesData,
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { padding: 20, boxWidth: 15 }
                    },
                    tooltip: { enabled: true }
                }
            }
        };

        // Render Charts
        window.onload = function () {
            const salesCtx = document.getElementById('salesLineChart').getContext('2d');
            new Chart(salesCtx, salesConfig);

            const productCtx = document.getElementById('productPieChart').getContext('2d');
            new Chart(productCtx, categoriesConfig);
        };
    </script>
</body>
