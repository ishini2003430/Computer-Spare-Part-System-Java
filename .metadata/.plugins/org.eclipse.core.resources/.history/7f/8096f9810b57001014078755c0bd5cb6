package ComputerPackage;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.*;
import java.io.IOException;
import java.sql.*;

@WebServlet("/UpdatePartServlet")
public class UpdatePartServlet extends HttpServlet {
    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {

        // Get parameters from form
        int id = Integer.parseInt(request.getParameter("id"));
        String partName = request.getParameter("part_name");
        String category = request.getParameter("category");
        String supplier = request.getParameter("supplier");
        int quantity = Integer.parseInt(request.getParameter("quantity"));
        int minStock = Integer.parseInt(request.getParameter("min_stock"));
        double price = Double.parseDouble(request.getParameter("price"));

        Connection conn = null;
        PreparedStatement pstmt = null;

        try {
            Class.forName("com.mysql.jdbc.Driver");
            conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/computer", "root", "ishini2003");

            String sql = "UPDATE parts SET part_name = ?, category = ?, supplier = ?, quantity = ?, min_stock = ?, price = ? WHERE id = ?";
            pstmt = conn.prepareStatement(sql);
            pstmt.setString(1, partName);
            pstmt.setString(2, category);
            pstmt.setString(3, supplier);
            pstmt.setInt(4, quantity);
            pstmt.setInt(5, minStock);
            pstmt.setDouble(6, price);
            pstmt.setInt(7, id);

            int updatedRows = pstmt.executeUpdate();

            if(updatedRows > 0) {
                // Redirect back to the parts list after successful update
                response.sendRedirect("ViewPart.jsp");
            } else {
                // Could not update (id might not exist)
                response.getWriter().println("<p>Error: Part not found or not updated.</p>");
            }

        } catch(Exception e) {
            throw new ServletException("Database update error: " + e.getMessage());
        } finally {
            try { if(pstmt != null) pstmt.close(); } catch(Exception ignored){}
            try { if(conn != null) conn.close(); } catch(Exception ignored){}
        }
    }
}
