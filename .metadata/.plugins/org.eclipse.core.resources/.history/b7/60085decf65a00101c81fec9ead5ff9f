<%
    int totalSuppliers = 0;
    int totalParts = 0;
    int totalOrders = 0;
    double totalSales = 0.0;

    LinkedHashMap<String, Integer> partsByCategory = new LinkedHashMap<>();
    List<String> months = new ArrayList<>();
    List<Double> monthlySales = new ArrayList<>();
    List<Integer> monthlyOrders = new ArrayList<>();

    Map<String, Double> salesMap = new LinkedHashMap<>();
    Map<String, Integer> ordersMap = new LinkedHashMap<>();

    List<String> productNames = new ArrayList<>();
    List<Integer> productQuantities = new ArrayList<>();

    try {
        Class.forName("com.mysql.cj.jdbc.Driver");
        Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/computer", "root", "ishini2003");
        Statement stmt = conn.createStatement();

        ResultSet rs = stmt.executeQuery("SELECT COUNT(*) FROM suppliers");
        if (rs.next()) totalSuppliers = rs.getInt(1);

        rs = stmt.executeQuery("SELECT COUNT(*) FROM parts");
        if (rs.next()) totalParts = rs.getInt(1);

        rs = stmt.executeQuery("SELECT COUNT(*) FROM orders");
        if (rs.next()) totalOrders = rs.getInt(1);

        rs = stmt.executeQuery("SELECT IFNULL(SUM(total_amount),0) FROM orders");
        if (rs.next()) totalSales = rs.getDouble(1);

        rs = stmt.executeQuery("SELECT category, COUNT(*) FROM parts GROUP BY category");
        while (rs.next()) {
            partsByCategory.put(rs.getString(1), rs.getInt(2));
        }

        // Prepare 6 months back
        SimpleDateFormat keyFormat = new SimpleDateFormat("yyyy-MM");
        Calendar cal = Calendar.getInstance();
        cal.add(Calendar.MONTH, -5);

        for (int i = 0; i < 6; i++) {
            String key = keyFormat.format(cal.getTime());
            salesMap.put(key, 0.0);
            ordersMap.put(key, 0);
            cal.add(Calendar.MONTH, 1);
        }

        // Actual data
        rs = stmt.executeQuery(
            "SELECT DATE_FORMAT(order_date, '%Y-%m') as month, " +
            "SUM(total_amount) as totalSales, COUNT(*) as totalOrders " +
            "FROM orders " +
            "WHERE order_date >= DATE_SUB(CURDATE(), INTERVAL 6 MONTH) " +
            "GROUP BY month"
        );

        while(rs.next()) {
            String key = rs.getString("month");
            salesMap.put(key, rs.getDouble("totalSales"));
            ordersMap.put(key, rs.getInt("totalOrders"));
        }

        SimpleDateFormat monthDisplay = new SimpleDateFormat("MMM yyyy");
        for (String key : salesMap.keySet()) {
            Date date = keyFormat.parse(key);
            months.add(monthDisplay.format(date));
            monthlySales.add(salesMap.get(key));
            monthlyOrders.add(ordersMap.get(key));
        }

        // Load product name and quantity chart
        rs = stmt.executeQuery("SELECT name, quantity FROM parts");
        while(rs.next()) {
            productNames.add(rs.getString("name"));
            productQuantities.add(rs.getInt("quantity"));
        }

        rs.close(); stmt.close(); conn.close();
    } catch(Exception e) {
        out.println("<p style='color:red;'>Error: " + e.getMessage() + "</p>");
    }

    Gson gson = new Gson();
%>

    <div class="metric-container">
        <div class="metric-box"><h2><%= totalSuppliers %></h2><p>Suppliers</p></div>
        <div class="metric-box"><h2><%= totalParts %></h2><p>Parts</p></div>
        <div class="metric-box"><h2><%= totalOrders %></h2><p>Orders</p></div>
        <div class="metric-box"><h2>$<%= String.format("%.2f", totalSales) %></h2><p>Total Sales</p></div>
    </div>

    <h2>Sales and Orders - Last 6 Months</h2>
    <canvas id="salesChart" height="300"></canvas>

    <h2>Parts by Category</h2>
    <canvas id="categoryChart" height="250"></canvas>

    <h2>Product Quantity Overview</h2>
    <canvas id="productChart" height="300"></canvas>

    <script>
        const months = <%= gson.toJson(months) %>;
        const sales = <%= gson.toJson(monthlySales) %>;
        const orders = <%= gson.toJson(monthlyOrders) %>;

        const categoryLabels = <%= gson.toJson(new ArrayList<>(partsByCategory.keySet())) %>;
        const categoryValues = <%= gson.toJson(new ArrayList<>(partsByCategory.values())) %>;

        const productLabels = <%= gson.toJson(productNames) %>;
        const productQuantities = <%= gson.toJson(productQuantities) %>;

        new Chart(document.getElementById('salesChart'), {
            type: 'bar',
            data: {
                labels: months,
                datasets: [
                    { label: 'Sales ($)', data: sales, backgroundColor: '#2563eb' },
                    { label: 'Orders', data: orders, backgroundColor: '#ef4444' }
                ]
            },
            options: {
                responsive: true,
                scales: { y: { beginAtZero: true } }
            }
        });

        new Chart(document.getElementById('categoryChart'), {
            type: 'pie',
            data: {
                labels: categoryLabels,
                datasets: [{
                    data: categoryValues,
                    backgroundColor: ['#2563eb','#22c55e','#ef4444','#fbbf24','#a855f7','#14b8a6']
                }]
            }
        });

        new Chart(document.getElementById('productChart'), {
            type: 'bar',
            data: {
                labels: productLabels,
                datasets: [{
                    label: 'Quantity',
                    data: productQuantities,
                    backgroundColor: '#10b981'
                }]
            },
            options: {
                responsive: true,
                indexAxis: 'y', // horizontal bar chart
                scales: {
                    x: { beginAtZero: true }
                }
            }
        });
    </script>
</div>
