    <h1>Sales Details</h1>
    <canvas id="salesChart" width="600" height="300"></canvas>

<%
    Connection conn = null;
    PreparedStatement psOrders = null, psItems = null, psChart = null;
    ResultSet rsOrders = null, rsItems = null, rsChart = null;
    List<String> months = new ArrayList<>();
    List<Double> totals = new ArrayList<>();

    try {
        Class.forName("com.mysql.jdbc.Driver");
        conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/computer", "root", "ishini2003");

        psChart = conn.prepareStatement("SELECT MONTH(created_at) AS m, SUM(total_amount) AS t FROM orders GROUP BY MONTH(created_at)");
        rsChart = psChart.executeQuery();
        while (rsChart.next()) {
            months.add("Month " + rsChart.getInt("m"));
            totals.add(rsChart.getDouble("t"));
        }

        psOrders = conn.prepareStatement("SELECT * FROM orders ORDER BY id DESC");
        rsOrders = psOrders.executeQuery();
        while (rsOrders.next()) {
            int orderId = rsOrders.getInt("id");
            String name = rsOrders.getString("name");
            String email = rsOrders.getString("email");
            double totalAmount = rsOrders.getDouble("total_amount");
%>
    <div class="sales-block">
        <h3>Order ID: <%=orderId%> | Customer: <%=name%> | Email: <%=email%> | Total: $<%=String.format("%.2f", totalAmount)%></h3>
        <table>
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
            <%
                psItems = conn.prepareStatement("SELECT * FROM order_items WHERE order_id = ?");
                psItems.setInt(1, orderId);
                rsItems = psItems.executeQuery();
                while (rsItems.next()) {
                    double price = rsItems.getDouble("price");
                    int qty = rsItems.getInt("quantity");
            %>
                <tr>
                    <td><%=rsItems.getInt("product_id")%></td>
                    <td><%=rsItems.getString("product_name")%></td>
                    <td>$<%=String.format("%.2f", price)%></td>
                    <td><%=qty%></td>
                    <td>$<%=String.format("%.2f", price * qty)%></td>
                </tr>
            <% } rsItems.close(); psItems.close(); %>
            </tbody>
        </table>
    </div>
<% } %>

<% } catch(Exception e) { out.println("<p style='color:red;'>Error: " + e.getMessage() + "</p>");
} finally {
    if (rsOrders != null) rsOrders.close();
    if (psOrders != null) psOrders.close();
    if (psChart != null) psChart.close();
    if (conn != null) conn.close();
} %>

<script>
    const ctx = document.getElementById('salesChart').getContext('2d');
    const chart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: <%= months.toString() %>,
            datasets: [{
                label: 'Monthly Sales ($)',
                data: <%= totals.toString() %>,
                backgroundColor: '#3b82f6'
            }]
        }
    });
</script>
