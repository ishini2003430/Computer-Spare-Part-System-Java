    <div class="top-bar">
        <input type="text" id="searchInput" placeholder="Search by Model or Brand..." onkeyup="filterLaptops()">
        <select id="brandFilter" onchange="filterLaptops()">
            <option value="">Choose by Brand</option>
            <option value="Asus">Asus</option>
            <option value="HP">HP</option>
            <option value="Dell">Dell</option>
            <option value="Acer">Acer</option>
        </select>
        <select id="ramFilter" onchange="filterLaptops()">
            <option value="">Choose by RAM</option>
            <option value="8GB">8GB</option>
            <option value="16GB">16GB</option>
            <option value="32GB">32GB</option>
        </select>
