<%@ page import="java.sql.*" %>
<%
    int id = 0;
    try {
        id = Integer.parseInt(request.getParameter("id"));
    } catch (Exception e) {
        response.sendRedirect("ViewProducts.jsp"); // Redirect if id is missing or invalid
        return;
    }
    
    Connection conn = null;
    PreparedStatement stmt = null;
    ResultSet rs = null;

    try {
        Class.forName("com.mysql.jdbc.Driver");
        conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/computer", "root", "ishini2003");
        stmt = conn.prepareStatement("SELECT * FROM cctvaccess WHERE id = ?");
        stmt.setInt(1, id);
        rs = stmt.executeQuery();

        if (!rs.next()) {
            response.sendRedirect("ViewCctvAccess.jsp"); // Redirect if no record found
            return;
        }
%>

<!DOCTYPE html>
<html>
<head>
    <title>Edit CCTV Accessory</title>
    <style>
        body {
            font-family: Arial;
            background-color: #f4f4f4;
