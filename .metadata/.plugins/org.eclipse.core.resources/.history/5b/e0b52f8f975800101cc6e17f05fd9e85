        <%
            try {
                Class.forName("com.mysql.jdbc.Driver");
                Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/computer", "root", "ishini2003");
                Statement stmt = conn.createStatement();
                ResultSet rs = stmt.executeQuery("SELECT * FROM products WHERE category='Laptop Accessory'");

                while (rs.next()) {
        %>
            <div class="card">
                <img src="<%= rs.getString("image_url") %>" alt="Accessory Image">
                <h3><%= rs.getString("name") %></h3>
                <p><%= rs.getString("description") %></p>
                <div class="price">Rs. <%= rs.getDouble("price") %></div>
                <div class="status <%= rs.getString("stock_status").equalsIgnoreCase("Low Stock") ? "low-stock" : "in-stock" %>">
                    <%= rs.getString("stock_status") %>
                </div>
            </div>
        <%
                }
                conn.close();
            } catch (Exception e) {
                out.println("<p style='color:red;'>Error: " + e.getMessage() + "</p>");
