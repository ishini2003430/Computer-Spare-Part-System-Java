    <%
        try {
            Class.forName("com.mysql.jdbc.Driver");
            Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/computer", "root", "ishini2003");
            Statement stmt = con.createStatement();
            ResultSet rs = stmt.executeQuery("SELECT * FROM printers");

            while (rs.next()) {
    %>
        <tr>
            <td><%= rs.getInt("id") %></td>
            <td><%= rs.getString("model_name") %></td>
            <td><%= rs.getString("item_code") %></td>
            <td><%= rs.getString("brand") %></td>
            <td><%= rs.getString("type") %></td>
            <td><%= String.format("%.2f", rs.getDouble("price")) %></td>
            <td><%= String.format("%.2f", rs.getDouble("cash_price")) %></td>
            <td><%= rs.getString("status") %></td>
            <td><%= rs.getString("description") %></td>
            <td>
                <%
                    String imgUrl = rs.getString("image_url");
                    if (imgUrl != null && !imgUrl.trim().isEmpty()) {
                %>
                    <img src="<%= imgUrl %>" alt="Printer Image" />
                <%
                    } else {
                %>
                    No Image
                <%
                    }
                %>
            </td>
            <td>
                <a href="editprinter.jsp?id=<%= rs.getInt("id") %>">Edit</a> |
                <a href="DeletePrinterServlet?id=<%= rs.getInt("id") %>" onclick="return confirm('Are you sure you want to delete this printer?');">Delete</a>
            </td>
        </tr>
    <%
            }
            con.close();
        } catch (Exception e) {
            out.println("<tr><td colspan='11'>Error: " + e.getMessage() + "</td></tr>");
        }
    %>

