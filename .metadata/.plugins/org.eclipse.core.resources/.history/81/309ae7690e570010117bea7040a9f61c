<div class="container">
    <h1>Parts by Category</h1>

    <div class="cards">
        <%
            Connection conn = null;
            PreparedStatement pstmt = null;
            ResultSet rs = null;
            try {
                Class.forName("com.mysql.jdbc.Driver");
                conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/computer", "root", "ishini2003");

                String sql = "SELECT category, COUNT(*) AS count FROM parts GROUP BY category";
                pstmt = conn.prepareStatement(sql);
                rs = pstmt.executeQuery();

                while (rs.next()) {
                    String category = rs.getString("category");
                    int count = rs.getInt("count");
        %>
        <div class="card">
            <h3><%= category %></h3>
            <div class="count"><%= count %></div>
        </div>
        <%
                }
            } catch (Exception e) {
                out.println("<p style='color:red;'>Error loading categories: " + e.getMessage() + "</p>");
            } finally {
                try { if (rs != null) rs.close(); } catch (Exception ignore) {}
                try { if (pstmt != null) pstmt.close(); } catch (Exception ignore) {}
                try { if (conn != null) conn.close(); } catch (Exception ignore) {}
            }
        %>
    </div>

    <div class="back-link">
