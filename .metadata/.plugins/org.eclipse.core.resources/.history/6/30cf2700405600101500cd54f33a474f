                <%
                    Connection conn = null;
                    Statement stmt = null;
                    ResultSet rs = null;

                    try {
                        Class.forName("com.mysql.jdbc.Driver");
                        conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/computer", "root", "ishini2003");

                        String query = "SELECT * FROM register";
                        stmt = conn.createStatement();
                        rs = stmt.executeQuery(query);

                        while (rs.next()) {
                            int id = rs.getInt("idregister"); // ✅ Make sure your table has this column
                            String fetchedfullname = rs.getString("fullname");
                            String fetchedemail = rs.getString("email");
                            String fetchedusername = rs.getString("username");
                            String fetchedpassword = rs.getString("password");
                %>
                <tr>
                    <td><%= id %></td>
                    <td><%= fetchedfullname %></td>
                    <td><%= fetchedemail %></td>
                    <td><%= fetchedusername %></td>
                    <td><%= fetchedpassword %></td>
                    <td>
                      <a class="btn-home" title="Update" href="RUpdateServlet?id=<%= id %>">


                        <a class="btn-home" title="Delete" href="DeleteRegister.jsp?id=<%= id %>" onclick="return confirm('Are you sure you want to delete this user?')">
    <i class="fas fa-trash-alt"></i>
</a>

                    </td>
                </tr>
                <%
                        }
                    } catch (Exception e) {
                        out.println("<h2>Error</h2><p>" + e.getMessage() + "</p>");
                    } finally {
                        if (rs != null) try { rs.close(); } catch (SQLException ignore) {}
                        if (stmt != null) try { stmt.close(); } catch (SQLException ignore) {}
                        if (conn != null) try { conn.close(); } catch (SQLException ignore) {}
                    }
                %>
