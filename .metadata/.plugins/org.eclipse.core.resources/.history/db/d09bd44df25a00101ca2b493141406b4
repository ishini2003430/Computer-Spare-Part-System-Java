<%
    int totalSuppliers = 0;
    int totalParts = 0;
    int totalOrders = 0;
    double totalSales = 0.0;
    java.util.LinkedHashMap<String, Integer> partsByCategory = new java.util.LinkedHashMap<>();
    java.util.List<String> months = new java.util.ArrayList<>();
    java.util.List<Double> monthlySales = new java.util.ArrayList<>();
    java.util.List<Integer> monthlyOrders = new java.util.ArrayList<>();

    try {
        Class.forName("com.mysql.jdbc.Driver");
        Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/computer", "root", "ishini2003");

        Statement stmt = conn.createStatement();
        ResultSet rs = stmt.executeQuery("SELECT COUNT(*) FROM suppliers");
        if (rs.next()) totalSuppliers = rs.getInt(1);

        rs = stmt.executeQuery("SELECT COUNT(*) FROM parts");
        if (rs.next()) totalParts = rs.getInt(1);

        rs = stmt.executeQuery("SELECT COUNT(*) FROM orders");
        if (rs.next()) totalOrders = rs.getInt(1);

        rs = stmt.executeQuery("SELECT IFNULL(SUM(total_amount),0) FROM orders");
        if (rs.next()) totalSales = rs.getDouble(1);

        rs = stmt.executeQuery("SELECT category, COUNT(*) FROM parts GROUP BY category");
        while (rs.next()) {
            partsByCategory.put(rs.getString(1), rs.getInt(2));
        }

        rs = stmt.executeQuery("SELECT DATE_FORMAT(order_date, '%b %Y') as month, SUM(total_amount), COUNT(*) FROM orders WHERE order_date >= DATE_SUB(CURDATE(), INTERVAL 6 MONTH) GROUP BY month ORDER BY order_date");
        while (rs.next()) {
            months.add(rs.getString(1));
            monthlySales.add(rs.getDouble(2));
            monthlyOrders.add(rs.getInt(3));
        }

        rs.close(); stmt.close(); conn.close();
    } catch(Exception e) {
        out.println("<p style='color:red;'>Error: " + e.getMessage() + "</p>");
    }
%>
    <div class="metric-container">
        <div class="metric-box"><h2><%= totalSuppliers %></h2><p>Suppliers</p></div>
        <div class="metric-box"><h2><%= totalParts %></h2><p>Parts</p></div>
        <div class="metric-box"><h2><%= totalOrders %></h2><p>Orders</p></div>
        <div class="metric-box"><h2>$<%= String.format("%.2f", totalSales) %></h2><p>Total Sales</p></div>
    </div>

    <h2>Sales and Orders - Last 6 Months</h2>
    <canvas id="salesChart" height="150"></canvas>

    <h2>Parts by Category</h2>
    <canvas id="categoryChart" height="150"></canvas>

    <script>
        const months = <%= new com.google.gson.Gson().toJson(months) %>;
        const sales = <%= new com.google.gson.Gson().toJson(monthlySales) %>;
        const orders = <%= new com.google.gson.Gson().toJson(monthlyOrders) %>;

        new Chart(document.getElementById('salesChart'), {
            type: 'bar',
            data: {
                labels: months,
                datasets: [
                    {
                        label: 'Sales ($)',
                        data: sales,
                        backgroundColor: '#2563eb'
                    },
                    {
                        label: 'Orders',
                        data: orders,
                        backgroundColor: '#ef4444'
                    }
                ]
            },
            options: {
                responsive: true,
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        const categoryLabels = <%= new com.google.gson.Gson().toJson(new java.util.ArrayList<>(partsByCategory.keySet())) %>;
        const categoryValues = <%= new com.google.gson.Gson().toJson(new java.util.ArrayList<>(partsByCategory.values())) %>;

        new Chart(document.getElementById('categoryChart'), {
            type: 'pie',
            data: {
                labels: categoryLabels,
                datasets: [{
                    data: categoryValues,
                    backgroundColor: ['#2563eb','#22c55e','#ef4444','#fbbf24','#a855f7','#14b8a6']
                }]
            }
        });
    </script>
</div>
