<%@ page import="java.util.*, java.text.DecimalFormat" %>
<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<!DOCTYPE html>
<html>
<head>
    <title>Your Cart - TechParts</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f9fafb;
            padding: 40px;
        }
        h2 {
            text-align: center;
            color: #222;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 30px;
            background: white;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
        }
        th, td {
            padding: 14px;
            border: 1px solid #ddd;
            text-align: center;
            vertical-align: middle;
        }
        th {
            background-color: #111827;
            color: white;
        }
        img {
            width: 80px;
            height: auto;
            border-radius: 6px;
        }
        .remove-btn {
            background-color: #ef4444;
            color: white;
            padding: 6px 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .remove-btn:hover {
            background-color: #dc2626;
        }
        .total {
            font-weight: bold;
            font-size: 18px;
        }
        .empty-message {
            text-align: center;
            font-size: 18px;
            margin-top: 40px;
            color: #555;
        }
    </style>
</head>
<body>

<h2>Your Shopping Cart</h2>

<%
    HttpSession session = request.getSession(false);
    List<HashMap<String, Object>> cart = null;
    double total = 0.0;
    DecimalFormat df = new DecimalFormat("#,##0.00");

    if (session != null) {
        cart = (List<HashMap<String, Object>>) session.getAttribute("cart");
    }

    if (cart == null || cart.isEmpty()) {
%>
    <p class="empty-message">Your cart is empty.</p>
<%
    } else {
%>

    <table>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Price (LKR)</th>
            <th>Quantity</th>
            <th>Subtotal (LKR)</th>
            <th>Action</th>
        </tr>

        <%
            for (HashMap<String, Object> item : cart) {
                int id = Integer.parseInt(item.get("id").toString());
                String name = item.get("name").toString();
                String image = item.get("image").toString();
                double price = Double.parseDouble(item.get("price").toString());
                int quantity = Integer.parseInt(item.get("quantity").toString());
                double subtotal = price * quantity;
                total += subtotal;
        %>

        <tr>
            <td><img src="<%= image %>" alt="Product Image"></td>
            <td><%= name %></td>
            <td><%= df.format(price) %></td>
            <td><%= quantity %></td>
            <td><%= df.format(subtotal) %></td>
            <td>
                <form action="RemoveFromCartServlet" method="post">
                    <input type="hidden" name="id" value="<%= id %>">
                    <input type="submit" value="Remove" class="remove-btn" onclick="return confirm('Are you sure you want to remove this item?');">
                </form>
            </td>
        </tr>

        <% } %>

        <tr>
            <td colspan="4" class="total">Total</td>
            <td colspan="2" class="total">LKR <%= df.format(total) %></td>
        </tr>
    </table>

<% } %>

</body>
</html>
