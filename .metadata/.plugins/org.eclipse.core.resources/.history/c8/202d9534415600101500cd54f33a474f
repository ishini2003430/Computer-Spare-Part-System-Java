package ComputerPackage;

import java.io.IOException;
import java.sql.*;
import javax.servlet.*;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.*;

@WebServlet("/RUpdateServlet")
public class RUpdateServlet extends HttpServlet {
    private static final long serialVersionUID = 1L;

    private String jdbcURL = "jdbc:mysql://localhost:3306/computer?useSSL=false&serverTimezone=UTC";
    private String jdbcUsername = "root";
    private String jdbcPassword = "ishini2003";

    // Select query for user by id
    private static final String SELECT_USER_BY_ID = "SELECT * FROM register WHERE idregister = ?";
    // Update query
    private static final String UPDATE_USER_SQL = "UPDATE register SET fullname=?, email=?, username=?, password=? WHERE idregister=?";

    @Override
    protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        String idStr = request.getParameter("id");
        if (idStr == null || idStr.isEmpty()) {
            response.sendRedirect("registeraccount.jsp");
            return;
        }

        int id = Integer.parseInt(idStr);

        try {
            Class.forName("com.mysql.jdbc.Driver"); // Use this for MySQL 8+
        } catch (ClassNotFoundException e) {
            throw new ServletException(e);
        }

        try (Connection conn = DriverManager.getConnection(jdbcURL, jdbcUsername, jdbcPassword);
             PreparedStatement ps = conn.prepareStatement(SELECT_USER_BY_ID)) {

            ps.setInt(1, id);
            ResultSet rs = ps.executeQuery();

            if (rs.next()) {
                request.setAttribute("idregister", rs.getInt("idregister"));
                request.setAttribute("fullname", rs.getString("fullname"));
                request.setAttribute("email", rs.getString("email"));
                request.setAttribute("username", rs.getString("username"));
                request.setAttribute("password", rs.getString("password"));

                RequestDispatcher dispatcher = request.getRequestDispatcher("UpdateRegister.jsp");
                dispatcher.forward(request, response);
            } else {
                response.sendRedirect("Registeraccount.jsp"); // User not found
            }

        } catch (SQLException e) {
            throw new ServletException(e);
        }
    }

    @Override
    protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        String idStr = request.getParameter("idregister");
        String fullname = request.getParameter("fullname");
        String email = request.getParameter("email");
        String username = request.getParameter("username");
        String password = request.getParameter("password");

        if (idStr == null || idStr.isEmpty() || fullname == null || email == null || username == null || password == null) {
            request.setAttribute("errorMessage", "Please fill all fields.");
            request.getRequestDispatcher("updateRegister.jsp").forward(request, response);
            return;
        }

        int id = Integer.parseInt(idStr);

        try {
            Class.forName("com.mysql.jdbc.Driver");
        } catch (ClassNotFoundException e) {
            throw new ServletException(e);
        }

        try (Connection conn = DriverManager.getConnection(jdbcURL, jdbcUsername, jdbcPassword);
             PreparedStatement ps = conn.prepareStatement(UPDATE_USER_SQL)) {

            ps.setString(1, fullname);
            ps.setString(2, email);
            ps.setString(3, username);
            ps.setString(4, password);
            ps.setInt(5, id);

            int updated = ps.executeUpdate();

            if (updated > 0) {
                response.sendRedirect("registeraccount.jsp"); // back to user list after update
            } else {
                request.setAttribute("errorMessage", "Update failed.");
                request.getRequestDispatcher("updateRegister.jsp").forward(request, response);
            }

        } catch (SQLException e) {
            throw new ServletException(e);
        }
    }
}
