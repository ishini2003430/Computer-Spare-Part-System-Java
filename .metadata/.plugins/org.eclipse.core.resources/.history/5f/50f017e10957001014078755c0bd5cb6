        <!-- Dashboard cards -->
        <section class="cards">
            <%
                Connection conn = null;
                PreparedStatement pstmt = null;
                ResultSet rs = null;
                int totalParts = 0;
                int lowStockAlerts = 0;
                java.util.Set<String> suppliers = new java.util.HashSet<>();
                java.util.Set<String> categories = new java.util.HashSet<>();

                try {
                    Class.forName("com.mysql.jdbc.Driver");
                    conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/computer", "root", "ishini2003");

                    String sql = "SELECT part_name, category, supplier, quantity, min_stock FROM parts";
                    pstmt = conn.prepareStatement(sql);
                    rs = pstmt.executeQuery();

                    java.util.List<java.util.Map<String,Object>> partsList = new java.util.ArrayList<>();

                    while(rs.next()) {
                        totalParts++;
                        String supplier = rs.getString("supplier");
                        String category = rs.getString("category");
                        int quantity = rs.getInt("quantity");
                        int minStock = rs.getInt("min_stock");

                        suppliers.add(supplier);
                        categories.add(category);
                        if(quantity <= minStock) {
                            lowStockAlerts++;
                        }
                    }
            %>
            <div class="card">
                <h3>Total Parts</h3>
                <div class="number"><%= totalParts %></div>
            </div>
            <div class="card">
                <h3>Suppliers</h3>
                <div class="number"><%= suppliers.size() %></div>
            </div>
            <div class="card alert">
                <h3>Low Stock Alerts</h3>
                <div class="number"><%= lowStockAlerts %></div>
            </div>
            <div class="card">
                <h3>Categories</h3>
                <div class="number"><%= categories.size() %></div>
            </div>
            <%
                    // Close previous statement & result set to re-query for table below
                    rs.close();
                    pstmt.close();

                    // Now prepare query to get full parts data including id & price for table display
                    sql = "SELECT id, part_name, category, supplier, quantity, min_stock, price FROM parts";
                    pstmt = conn.prepareStatement(sql);
                    rs = pstmt.executeQuery();
                } catch(Exception e) {
                    out.println("<p style='color:red;'>Error loading data: " + e.getMessage() + "</p>");
                }
            %>
        </section>

        <!-- Parts Table -->
        <section class="table-container">
            <table>
                <thead>
                <tr>
                    <th>Part Name</th>
                    <th>Category</th>
                    <th>Supplier</th>
                    <th>Quantity</th>
                    <th>Min Stock</th>
                    <th>Price ($)</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                <%
                    try {
                        while(rs.next()) {
                            int id = rs.getInt("id");
                            String partName = rs.getString("part_name");
                            String category = rs.getString("category");
                            String supplier = rs.getString("supplier");
                            int quantity = rs.getInt("quantity");
                            int minStock = rs.getInt("min_stock");
                            double price = rs.getDouble("price");
                %>
                <tr>
                    <td><%= partName %></td>
                    <td><%= category %></td>
                    <td><%= supplier %></td>
                    <td><%= quantity %></td>
                    <td><%= minStock %></td>
                    <td><%= String.format("%.2f", price) %></td>
                    <td>
                        <a href="EditPart.jsp?id=<%=id%>" class="btn-icon edit" title="Edit">
                            <!-- Pencil icon SVG -->
                            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M3 17.25V21h3.75l11.06-11.06-3.75-3.75L3 17.25zM21.41 6.34a1.25 1.25 0 0 0 0-1.77l-2-2a1.25 1.25 0 0 0-1.77 0l-1.83 1.83 3.75 3.75 1.85-1.81z"/>
                            </svg>
                        </a>
                        <a href="DeletePartServlet?id=<%=id%>" class="btn-icon delete" title="Delete"
                           onclick="return confirm('Are you sure you want to delete this part?');">
                            <!-- Trash bin icon SVG -->
                            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M3 6h18v2H3V6zm2 3h14v12a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V9zm3-5h6v2H8V4z"/>
                            </svg>
                        </a>
                    </td>
                </tr>
                <%
                        }
                    } catch(Exception e) {
                        out.println("<tr><td colspan='7' style='color:red;'>Error loading parts: " + e.getMessage() + "</td></tr>");
                    } finally {
                        if(rs != null) try { rs.close(); } catch(Exception ignore){}
                        if(pstmt != null) try { pstmt.close(); } catch(Exception ignore){}
                        if(conn != null) try { conn.close(); } catch(Exception ignore){}
                    }
                %>
                </tbody>
            </table>
        </section>
