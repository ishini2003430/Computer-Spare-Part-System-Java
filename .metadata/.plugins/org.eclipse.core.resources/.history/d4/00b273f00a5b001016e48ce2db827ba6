<%
    int totalUsers = 0;
    int totalOrders = 0;
    double totalRevenue = 0.0;
    int totalProducts = 0;

    LinkedHashMap<String, Integer> partsByCategory = new LinkedHashMap<>();
    List<String> productNames = new ArrayList<>();
    List<Integer> productQuantities = new ArrayList<>();

    try {
        Class.forName("com.mysql.jdbc.Driver");
        Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/computer", "root", "ishini2003");
        Statement stmt = conn.createStatement();

        // Total users from register table
        ResultSet rs = stmt.executeQuery("SELECT COUNT(*) FROM register");
        if (rs.next()) totalUsers = rs.getInt(1);

        // Total orders
        rs = stmt.executeQuery("SELECT COUNT(*) FROM orders");
        if (rs.next()) totalOrders = rs.getInt(1);

        // Total revenue
        rs = stmt.executeQuery("SELECT IFNULL(SUM(total_amount), 0) FROM orders");
        if (rs.next()) totalRevenue = rs.getDouble(1);

        // Total products combined count from multiple tables
        rs = stmt.executeQuery(
            "SELECT " +
            " (SELECT COUNT(*) FROM cctvaccess) + " +
            " (SELECT COUNT(*) FROM computeraccess) + " +
            " (SELECT COUNT(*) FROM laptops) + " +
            " (SELECT COUNT(*) FROM printers) + " +
            " (SELECT COUNT(*) FROM products) AS total_products"
        );
        if (rs.next()) totalProducts = rs.getInt("total_products");

        // Parts by category for pie chart (you can keep parts table for category)
        rs = stmt.executeQuery("SELECT category, COUNT(*) FROM parts GROUP BY category");
        while (rs.next()) {
            partsByCategory.put(rs.getString(1), rs.getInt(2));
        }

        // Top 10 ordered products for bar chart
        rs = stmt.executeQuery("SELECT product_name, SUM(quantity) AS total_quantity FROM order_items GROUP BY product_name ORDER BY total_quantity DESC LIMIT 10");
        while (rs.next()) {
            productNames.add(rs.getString("product_name"));
            productQuantities.add(rs.getInt("total_quantity"));
        }

        rs.close();
        stmt.close();
        conn.close();
    } catch (Exception e) {
        out.println("<p style='color:red;'>Error: " + e.getMessage() + "</p>");
    }

    Gson gson = new Gson();
%>

        <!-- Dashboard Cards -->
        <div class="cards">
            <div class="card">
                <h3>Total Users</h3>
                <p><%= totalUsers %></p>
            </div>
            <div class="card">
                <h3>Total Orders</h3>
                <p><%= totalOrders %></p>
            </div>
            <div class="card">
                <h3>Total Revenue</h3>
                <p>$<%= String.format("%.2f", totalRevenue) %></p>
            </div>
            <div class="card">
                <h3>Total Products</h3>
                <p><%= totalProducts %></p>
            </div>
        </div>

        <!-- Charts -->
        <div class="charts">
            <div class="chart-card">
                <h3>Top 10 Ordered Products</h3>
                <canvas id="productChart" height="150"></canvas>
            </div>

            <div class="chart-card">
                <h3>Parts by Category</h3>
                <canvas id="categoryChart" height="150"></canvas>
            </div>
        </div>
    </div>

<script>
    const productNames = <%= gson.toJson(productNames) %>;
    const productQuantities = <%= gson.toJson(productQuantities) %>;

    new Chart(document.getElementById('productChart'), {
        type: 'bar',
        data: {
            labels: productNames,
            datasets: [{
                label: 'Quantity Ordered',
                data: productQuantities,
                backgroundColor: '#22c55e'
            }]
        },
        options: {
            responsive: true,
            scales: { y: { beginAtZero: true } }
        }
    });

    const categoryLabels = <%= gson.toJson(new ArrayList<>(partsByCategory.keySet())) %>;
    const categoryValues = <%= gson.toJson(new ArrayList<>(partsByCategory.values())) %>;

    new Chart(document.getElementById('categoryChart'), {
        type: 'pie',
        data: {
            labels: categoryLabels,
            datasets: [{
                data: categoryValues,
                backgroundColor: ['#2563eb','#22c55e','#ef4444','#fbbf24','#a855f7','#14b8a6']
            }]
        },
        options: {
            responsive: true,
            plugins: { legend: { position: 'bottom', labels: { padding: 20, boxWidth: 15 } } }
        }
    });
</script>

